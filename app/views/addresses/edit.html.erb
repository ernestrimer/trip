<h1>Update Addresses</h1>
<%= form_with(model: @location, local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, required: true, placeholder: "street" %>

    <%= f.label :city %>
    <%= f.text_field :city, required: true, placeholder: "city" %>

    <%= f.label :state %>
    <%= f.text_field :state, required: true, placeholder: "state" %>

    <%= f.label :zip %>
    <%= f.text_field :zip, required: true, placeholder: "12345" %>
  </div>
  <%= f.submit nil, class: "ui blue button inverted" %>
<% end %>

